<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>





<h1>Books</h1>
<table width="1000">
	<tr align="center">
<th><strong>Title</strong></<th>
<th><strong>Body</strong></th>
</tr>

   <% @books.each do |book| %>

	<tr align="left">

      <td><span><%= book.title %></span></td>
      <td><span><%= book.body %></span></td>

      <td>
<%= link_to "show", todolist_path(book.id) %>
<%= link_to "edit", edit_todolist_path(book.id) %>
<%= link_to "destroy", destroy_todolist_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
</td>

    </tr>

<% end %>
</table>


<h1>New book</h1>

<%  @book = Book.new %>
<!-- form_for部分 -->
<%= form_for(@book, url: '/todolists') do |f| %>

<% if flash[:error] %>
  <p><%= flash[:error] %></p>
<% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>


<% end %>



