<% if flash[:error] %>
  <p><%= flash[:error] %></p>
<% end %>


<h1>Editing Book</h1>
<%= form_for(@book, url:"/todolists/#{@book.id}") do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "show", todolist_path(@book.id) %>
  <%= link_to "back", todolists_path %>

